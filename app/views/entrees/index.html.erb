<h1>Listing entrees</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @entrees.each do |entree| %>
  <tr>
    <td><%=h entree.name %></td>
    <td><%=h entree.description %></td>
    <td><%= link_to 'Show', entree %></td>
    <td><%= link_to 'Edit', edit_entree_path(entree) %></td>
    <td><%= link_to 'Destroy', entree, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New entree', new_entree_path %>